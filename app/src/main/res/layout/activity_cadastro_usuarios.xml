<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100" >
    tools:context="com.example.kelvinferreira.geracaosaude.CadastroUsuarios">
    

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_weight="80"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/gs_icon_100_60" />

        <TextView
            android:id="@+id/tv_ins_us_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/tf_ins_us_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_ins_us_sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sexo"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.14">

            <ImageButton
                android:id="@+id/ins_us_bt_masc"
                android:layout_width="50dp"
                android:layout_height="85dp"
                android:layout_gravity="left"
                android:layout_weight="0.49"
                app:srcCompat="@drawable/icon_masc_50" />

            <ImageButton
                android:id="@+id/ins_us_bt_fem"
                android:layout_width="50dp"
                android:layout_height="81dp"
                android:layout_gravity="right"
                android:layout_weight="0.49"
                app:srcCompat="@drawable/icon_fem_50" />


        </LinearLayout>

        <Button
            android:id="@+id/ins_us_bt_salvar"
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Salvar" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
